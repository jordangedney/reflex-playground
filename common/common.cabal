                     -- , reflex-dom == 0.4
                     , monad-par >0.3 && <0.4

  hs-source-dirs:      src

  default-language:    Haskell2010

test-suite doctests
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0

  ghc-options:         -threaded

  hs-source-dirs:      tests
  main-is:             Doctests.hs

  build-depends:       base
                     , common
                     , doctest >= 0.8
                     , QuickCheck