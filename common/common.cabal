library
  exposed-modules:     RayWut
                     , RayCaster
                     , Types

  -- other-extensions:
  build-depends:       base >=4.9 && <4.11
                     , lens > 4.11 && < 5
                     , linear >1.20 && <1.30
                     , containers >0.5 && <0.6
